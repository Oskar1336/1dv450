<h1>Welcome</h1>
<p><%= flash[:adminnotice] %></p>
<p>
	<%= link_to "Logout", :controller => "admin", :action => "logout" %>
</p>
<p>
	<table class="adminTable">
	<tr>
		<th>Application name:</th>
		<th>Email:</th>
		<th>API Key:</th>
		<th>Created:</th>
		<th>Updated:</th>
	</tr>
		<% @app.each do |a| %>
			<tr>
				<td><%= a.application_name %></td>
				<td><%= a.contact_mail %></td>
				<td><%= a.api_key.key %></td>
				<td><%= a.created_at %></td>
				<td><%= a.updated_at %></td>
				<td><%= link_to "Edit", edit_admin_path(a) %></td>
				<td><%= link_to "Delete", admin_path(a), confirm: "Are you sure you want to delete this application?", method: :delete %></td>
			</tr>
		<% end %>
	</table>
</p>
